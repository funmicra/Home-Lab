# .env file for WireGuard Docker Compose

# User and group IDs for file permissions
PUID=1000
PGID=1000

# Timezone
TZ=Europe/Athens

# Optional: Server URL and port
SERVERURL=your_server_url
SERVERPORT=your_server_port

# Optional: Peer configuration and DNS
PEERS=peer1,peer2
PEERDNS=auto

# Optional: Internal subnet and allowed IPs
INTERNAL_SUBNET=10.13.13.0
ALLOWEDIPS=0.0.0.0/0

# Optional: Persistent keepalive peers
PERSISTENTKEEPALIVE_PEERS=

# Optional: Log configurations
LOG_CONFS=true

# Host and container port for UDP
HOST_PORT=51820
CONTAINER_PORT=51820
